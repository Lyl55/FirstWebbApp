
@model List<FirstWebbApp.Models.Derivers.DriversModel>
<table border="1" width=50%>
    <tr>
        <th>Name</th>
        <th>LastName</th>
        <th>Number</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Name</td>
            <td>@m.LastName</td>
            <td>@m.Number</td>
            <td>@m.Email</td>
            <td>
                <a asp-route-id="@m.ID" asp-action="Update" asp-controller="Drivers">Update</a>
            </td>
            <td>
                @{
                    int id = m.ID;
                }
                <form asp-action="Delete" asp-controller="Drivers">
                    <input asp-for="@id" hidden />
                    <button class="btn-danger" type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<br>
<a asp-action="Create" asp-controller="Drivers">Create</a>
